<% end %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Type</th>
        <th scope="col">Name</th>
        <th scope="col">City</th>
        <th scope="col">County</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @suggestions.each do |s| %>
        <tr>
          <th scope="row"><%= s.id %></th>
          <td><%= s.s_type %></th>
          <td><%= s.name %></td>
          <td><%= s.city %></td>
          <td><%= s.county %></td>
          <td><%= s.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>