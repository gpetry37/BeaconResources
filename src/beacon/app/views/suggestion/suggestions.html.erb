<header>
  <div class="topnav">
    <h1><%= link_to "BeaconResources", "/" %></h1>
    <button type="button" class="btn btn-outline-primary"><%= link_to "Suggest Resource", "/suggestions" %></button>
    <button type="button" class="btn btn-outline-primary"><%= link_to "Log In", "/login" %></button>
  </div> 
</header>

<form>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="SuggestionSelect" id="flexRadioDefault1" required>
    <label class="form-check-label" for="flexRadioDefault1">
      Addition Suggestion
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="SuggestionSelect" id="flexRadioDefault2">
    <label class="form-check-label" for="flexRadioDefault2">
      Removal Suggestion
    </label>
  </div>
  <div class="mb-3">
    <label for="ResourceNameInput" class="form-label">Resource Name</label>
    <input type="name" class="form-control" id="ResourceNameInput" placeholder="Example Soup Kitchen">
  </div>
  <div class="mb-3">
    <label for="LocationInput" class="form-label">Location</label>
    <input type="Location" class="form-control" id="LocationInput" placeholder="Example City, Mercer County">
  </div>
  <div class="mb-3">
    <label for="TextBox" class="form-label">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Why do you think this resource should be added/removed?"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>